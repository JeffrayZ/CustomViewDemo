<?xml version="1.0" encoding="utf-8"?>
<com.example.nestedscrollviewdemo.demo3.MyNestedScrollParent3 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@android:color/holo_green_light"
        android:src="@drawable/abc_vector_test"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/demo3_recyclerview"
        android:background="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.example.nestedscrollviewdemo.demo3.MyNestedScrollParent3>