<?xml version="1.0" encoding="utf-8"?>
<com.example.nestedscrollviewdemo.jk541.Jk541GrandParentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/jk541_view1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/holo_red_light" />
    <com.example.nestedscrollviewdemo.jk541.Jk541ParentLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/jk541_view2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/holo_green_light" />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/jk541_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/colorPrimaryDark">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_launcher_background"
                android:text="语文" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_launcher_background"
                android:text="数学" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_launcher_background"
                android:text="英语" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_launcher_background"
                android:text="全部" />
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/jk541_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.example.nestedscrollviewdemo.jk541.Jk541ParentLayout>
</com.example.nestedscrollviewdemo.jk541.Jk541GrandParentLayout>





